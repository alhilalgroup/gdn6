<?xml version='1.0' encoding='utf-8'?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.gdnonline.m"
        version     = "5.2.3" >
    <name>GDN Online</name>
    <description>
      GDN Online is the GCCâ€™s most dynamic digital news source providing a selected mix of local, regional and international news and features to a readership across the Gulf countries and internationally.
    </description>
    <author email="binju@northstar.bh" href="http://www.gdnonline.com">
        GDN Online
    </author>

 
<content src="index.html" />
<gap:plugin name="pushbots-cordova-plugin" source="npm" />
 
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
      <icon src="icon.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>


  <icon platform="android" qualifier="ldpi" src="res/icon/android/icon-36-ldpi.png" />
  <icon platform="android" qualifier="mdpi" src="res/icon/android/icon-48-mdpi.png" />
  <icon platform="android" qualifier="hdpi" src="res/icon/android/icon-72-hdpi.png" />
  <icon platform="android" qualifier="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />

  <preference name="SplashScreen" src="splash.png" />
  <preference name="AutoHideSplashScreen" value="true"/>
  <preference name="SplashScreenDelay" value="5000" />
  <preference name="DisallowOverscroll" value="true" />


  <splash platform="android"  src="res/screen/android/screen-ldpi-portrait.png" density="ldpi" />
  <splash platform="android" src="res/screen/android/screen-mdpi-portrait.png" density="mdpi" />
  <splash platform="android"  src="res/screen/android/screen-hdpi-portrait.png" density="hdpi" />
  <splash platform="android"  src="res/screen/android/screen-xhdpi-portrait.png" density="xhdpi"/>
</widget>
